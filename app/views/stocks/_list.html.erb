<% if current_user.stocks.count > 0 %>
  <h3>Here are the stocks in your portfolio </h3>
  <div class="well flex results-block" >
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Symbol</th>
          <th scope="col">Name</th>
          <th scope="col">Latest Price</th>
          <% if @user.id == current_user.id %><th scope="col">Actions </th><%end%>
        </tr>
      </thead>
      <tbody>
        <% current_user.stocks.each do |stock_item| %>
          <tr>
            <td><%=stock_item.ticker%></td>
            <td><%=stock_item.name%></td>
            <td><%=stock_item.last_price%></td>
            <% if @user.id == current_user.id %><td><%= link_to "Remove", user_stock_path(stock_item), 
                              method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-sm btn-danger" %></td><%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
